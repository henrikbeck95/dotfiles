[module/testing1]
type = custom/text
#content = Click me %{A4:notify-send "Scroll not over click":}scroll here%{A}
#label = AAAAA%{A1:termite --exec='watch sensors' & disown:} %temperature%%{A}
label = BBBBB%{A1:termite --exec='watch sensors' & disown:} %temperature%%{A}
click-middle = notify-send "Click-middle"

[module/testing2]
type = custom/text
content = Scroll me %{A1:notify-send "Click over scroll":}Click ME%{A}
scroll-up = notify-send "Scroll Up"

[module/menuzinho]
type = custom/menu
expand-right = true

label-open = Menu
label-close = X
label-separator = |
format-spacing = 1

menu-0-0 = Internet
menu-0-0-exec = menu-open-1
menu-0-1 = Power
menu-0-1-exec = menu-open-2

menu-1-0 = Chrome
menu-1-0-exec = google-chrome-stable &
menu-1-1 = Spotify
menu-1-1-exec = spotify &

menu-2-0 = Reboot
menu-2-0-exec = systemctl reboot
menu-2-1 = Shutdown
menu-2-1-exec = systemctl poweroff

enable-ipc = true

[module/demo]
type = custom/ipc
hook-0 = date
hook-1 = whoami
hook-2 = echo "Files in ${HOME}: $(ls -1a ~ | wc -l)"
initial = 1
click-left = polybar-msg -p %pid% hook demo 1
click-right = polybar-msg -p %pid% hook demo 2
double-click-left = polybar-msg -p %pid% hook demo 3

